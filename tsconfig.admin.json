        "resources/js/ziggy.d.ts",
        "resources/js/admin/**/*",
        "resources/js/admin/**/*.vue"
    ],
    "compilerOptions": {
        "allowJs": true,
        "types": ["naive-ui/volar"],
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.admin.tsbuildinfo",
